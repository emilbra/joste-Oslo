{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webServerCount": {
            "type": "int",
            "defaultValue": 1
        }
    },
    "functions": [],
    "variables": {},
    // Denne templaten benytter såkalte Linked templates. Istedet for å ha en skikkelig svær template så har vi en mindre template som linker til andre, mindre templates.
    // Slik hever vi modularitet og gjennbruk av kode.
    // De templatene vi lenker til kan brukes i mange andre templates lik denne.
    // Vi velger i tillegg å benytte en del inline-parametre, siden vi ønsker å definere parametrene som input til DENNE filen, som deretter distribuerer det til de andre templatene.
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "webServer", //TODO: legg til concatinerte navn
            "properties": {
                //incremental vil si at vi kan oppdatere objekter, dersom de eksisterer fra før av!
                "mode": "Incremental",
                "templateLink": {
                    "uri": "PlaceHolder",
                    //må man ha duplikate templates for å kunne benytte contentVersion?
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink":{ //TODO: Vurder om det er bedre å passe params inline
                    "uri":"PlaceHolder",
                    "contentVersion": "1.0.0.0"
                }
            },
            "copy": {
                "name": "[concat('webServer', copyIndex(1))]", //TODO: Improve this
                "count": "[parameters('webServerCount')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "availabilitySet", //TODO: legg til concatinert navn
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'webServer')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "dataBase", //TODO: Legg til concatinert navn
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "orchestrator", //TODO: sjekk om navn funker, og concatiner.
            //TODO: Legg til disk iden templaten.
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "PlaceHolder",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {}
}